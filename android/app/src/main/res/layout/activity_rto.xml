<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sample"
    tools:context=".RtoActivity">


    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/textviewbordershape"
        android:text="RTO"
        android:textAlignment="center"

        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/valider"
        android:layout_width="148dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttonshapecolor"
        android:text="VALIDER"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <projet.license.PaintView
        android:id="@+id/paintView"
        android:layout_width="wrap_content"
        android:layout_height="504dp"
        android:layout_above="@+id/scoreRto"
        android:layout_below="@+id/titre"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/textviewbordershape" />


    <Button
        android:id="@+id/button_effacer"
        android:layout_width="148dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttonshapecolor"
        android:text="EFFACER"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/joueur"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_below="@+id/titre"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/adversaire"
        android:background="@drawable/textviewbordershape"
        android:fontFamily="cursive"
        android:text="Vous"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adversaire"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_below="@+id/titre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/textviewbordershape"
        android:fontFamily="cursive"
        android:text="Adversaire"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreRto"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/button_effacer"
        android:layout_toEndOf="@+id/valider"
        android:textAlignment="center"
        android:textSize="30sp" />


</RelativeLayout>