<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sample"
    tools:context=".RtoActivity">


    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/textviewbordershape"
        android:text="RTO"
        android:textAlignment="center"

        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="102dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonshapecolor"
        android:text="START"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adversaire"
        android:layout_width="263dp"
        android:layout_height="64dp"
        android:layout_below="@+id/titre"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <projet.license.PaintView
        android:id="@+id/paintView"
        android:layout_width="wrap_content"
        android:layout_height="504dp"
        android:layout_above="@+id/button_reset"
        android:layout_below="@+id/titre"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/textviewbordershape" />




    <Button
        android:id="@+id/valider"
        android:layout_width="148dp"
        android:layout_height="65dp"
        android:layout_below="@+id/titre"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/formeDemande"
        android:background="@drawable/buttonshapecolor"
        android:text="Valider"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold" />

    <textView
        android:id="@+id/button2"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="196dp"

        android:layout_marginTop="3dp"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/button_start_pause"
        android:background="@drawable/buttonshapecolor"
        android:text="Button" />



</RelativeLayout>