<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimeDetectorActivity">


    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:text="TIME DETECTOR"
        android:textAlignment="center"
        android:textColor="?attr/colorError"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="102dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:text="START"
        android:textColor="?attr/colorError"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/formeDemande"
        android:layout_width="263dp"
        android:layout_height="64dp"
        android:layout_below="@+id/titre"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="?attr/colorError"
        android:textSize="30sp"
        android:textStyle="bold" />

    <projet.license.PaintView
        android:id="@+id/paintView"
        android:layout_width="314dp"
        android:layout_height="504dp"
        android:layout_above="@+id/button_reset"
        android:layout_below="@+id/formeDemande"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="27dp" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="155dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="54dp"
        android:text="00.00"
        android:textAlignment="center"
        android:textColor="?attr/colorError"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="102dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/button_start_pause"
        android:text="RESET"
        android:textColor="?attr/colorError"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/valider"
        android:layout_width="148dp"
        android:layout_height="65dp"
        android:layout_below="@+id/titre"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/formeDemande"
        android:text="Valider"
        android:textColor="?attr/colorError"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/button_reset"
        android:text="Button" />

    <Button
        android:id="@+id/history"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="246dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="11dp"
        android:text="Formes déssinées"
        android:textColor="?attr/colorError"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="248dp"
        android:layout_height="388dp"
        android:layout_above="@+id/button_reset"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="111dp"
        android:textColor="@color/colorAccent" />
</RelativeLayout>