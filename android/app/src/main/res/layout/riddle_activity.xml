<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample2">

    <TextView
        android:id="@+id/title"
        android:layout_width="242dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="Riddle Game"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="157dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/title"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/buttonshapecolor"
        android:text="START"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enigme"
        android:layout_width="231dp"
        android:layout_height="115dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="48dp"
        android:layout_toEndOf="@+id/start"
        android:text="Press Start pour générer une enigme"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/valider"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:layout_alignEnd="@+id/start"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="-52dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/buttonshapecolor"
        android:text="SEND"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/clear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valider"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/buttonshapecolor"
        android:text="CLEAR"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible" />


    <projet.license.PaintView
        android:id="@+id/myCanvas2"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_below="@+id/enigme"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="59dp" />

    <TextView
        android:id="@+id/rep"
        android:layout_width="394dp"
        android:layout_height="58dp"
        android:layout_below="@+id/myCanvas2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/propo"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rep"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/buttonshapecolor"
        android:text="UNE ENIGME A PROPOSER ?"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />
</RelativeLayout>