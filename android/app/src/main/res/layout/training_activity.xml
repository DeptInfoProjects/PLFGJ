<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample2">


    <Button
        android:id="@+id/CLEAR"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshapecolor"
        android:text="CLEAR"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/couleur"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginStart="58dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/CLEAR"
        android:background="@drawable/buttonshapecolor"
        android:text="COLOR"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/HELP"
        android:layout_width="144dp"
        android:layout_height="66dp"
        android:layout_below="@+id/canvas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttonshapecolor"
        android:text="HELP"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="212dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="TRAINING MODE"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <projet.license.PaintView
        android:id="@+id/canvas"
        android:layout_width="325dp"
        android:layout_height="426dp"
        android:layout_below="@+id/couleur"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="42dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="184dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/title"
        android:src="@drawable/logo" />
</RelativeLayout>